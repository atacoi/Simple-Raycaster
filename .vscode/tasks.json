{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/usr/bin/clang",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/src/*.c",
        "${workspaceFolder}/src/utils/*.c",
        "-o",
        "${workspaceFolder}/build/${config:projectName}",
        "-F${workspaceFolder}/frameworks",
        "-framework",
        "SDL2",
        "-framework",
        "SDL2_image",
        "-I",
        "include",
        "-headerpad_max_install_names"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Add RPath",
      "type": "shell",
      "command": "install_name_tool",
      "args": [
        "-add_rpath",
        "${workspaceFolder}/frameworks",
        "${workspaceFolder}/build/${config:projectName}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [],
      "dependsOn": ["C/C++: clang build active file"]
    }
  ],
  "version": "2.0.0"
}
